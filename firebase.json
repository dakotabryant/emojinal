{
  "hosting": {
    "public": "./client/public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "rules": {
    "users": {
      ".read": true,
      ".write": true
    }
  },
  "questions": {
    "hello": true
  },
  "users": {
    "$username": {
      "uid": true,
      "name": true,
      "email": true
    }
  },
  "database": {
    "rules": "database.rules.json"
  }
}
